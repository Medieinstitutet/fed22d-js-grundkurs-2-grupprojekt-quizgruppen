{
  "compilerOptions": {
    "target": "es2017",
    "useDefineForClassFields": true,
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
  },
  "include": ["src"]
}
